<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mibtech.nbadmin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.mibtech.nbadmin.MainActivity"
            android:theme="@style/DarkTheme" />

        <activity
            android:name="com.mibtech.nbadmin.SignupActivity"
            android:theme="@style/DarkTheme" />

        <activity android:name="com.mibtech.nbadmin.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mibtech.nbadmin.ResetPasswordActivity"
            android:theme="@style/DarkTheme" />

        <activity
            android:name="com.mibtech.nbadmin.ProfileActivity"
            android:theme="@style/DarkTheme" />

        <activity
            android:name="com.mibtech.nbadmin.Cards"
            android:theme="@style/DarkTheme" />

    </application>

</manifest>